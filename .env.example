ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# OCR Configuration
TESSERACT_CONFIG=--oem 3 --psm 6
OCR_LANGUAGES=eng+ara

# ML Model Configuration
ML_MODEL_PATH=backend/fastapi_app/ml/models/
ML_MODEL_RETRAIN_INTERVAL=30  # days

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
TESTING=false